@using Procedure.Web.Models
@using System.Linq
@model List<WorkPackageItem>

<section>
    <div class="container">
        @if (Model.Any())
        {
            <h2>Work Packages</h2>
        }
        else
        {
            <h2>No work packages</h2>
        }
    </div>
</section>

<section>
    <div class="container">
        <ul class="list--block">
            @foreach (WorkPackageItem workPackage in Model.OrderBy(p => p.Id))
            {
                <li>
                    <div class="list--details">
                        <h2>@workPackage.Title</h2>
                        <p>Id @workPackage.Id</p>
                    </div>
                    <div>
                        @Html.ActionLink("Details", "Details", "WorkPackage", new { id = workPackage.Id }, new { @class = "btn--secondary" })
                    </div>
                </li>
            }
        </ul>
    </div>
</section>

